<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Facebook Clone - Messages</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
    <!-- Header -->
    <header class="bg-white shadow-md fixed top-0 w-full z-50">
        <div class="max-w-6xl mx-auto px-4 py-3 flex justify-between items-center">
            <a href="/dashboard" class="text-2xl font-bold text-blue-600">facebook</a>
            
            <nav class="hidden md:flex space-x-6">
                <a href="/dashboard" class="text-gray-700 hover:bg-gray-100 px-3 py-2 rounded-lg transition">Home</a>
                <a href="/friends" class="text-gray-700 hover:bg-gray-100 px-3 py-2 rounded-lg transition">Friends</a>
                <a href="/messages" class="text-blue-600 bg-blue-50 px-3 py-2 rounded-lg font-medium">Messages</a>
                <a href="/profile" class="text-gray-700 hover:bg-gray-100 px-3 py-2 rounded-lg transition">Profile</a>
            </nav>
            
            <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold">
                    <%= user.firstName.charAt(0).toUpperCase() %>
                </div>
                <span class="hidden md:block text-gray-700"><%= user.firstName %> <%= user.lastName %></span>
                <a href="/logout" class="bg-gray-200 hover:bg-gray-300 px-3 py-2 rounded-lg text-gray-700 transition">Logout</a>
            </div>
        </div>
    </header>
    
    <!-- Main Content -->
    <div class="pt-20 max-w-6xl mx-auto px-4 py-6">
        <div class="bg-white rounded-lg shadow-md h-[calc(100vh-8rem)] flex">
            <!-- Conversations List -->
            <div class="w-1/3 border-r border-gray-200 flex flex-col">
                <div class="p-4 border-b border-gray-200">
                    <h2 class="text-xl font-bold text-gray-800">Messages</h2>
                    <div class="mt-3">
                        <input 
                            type="text" 
                            placeholder="Search conversations..." 
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500"
                        >
                    </div>
                </div>
                
                <div class="flex-1 overflow-y-auto">
                    <% if (typeof conversations !== 'undefined' && conversations.length > 0) { %>
                        <% conversations.forEach(conversation => { %>
                            <div class="p-4 border-b border-gray-100 hover:bg-gray-50 cursor-pointer transition" 
                                 onclick="selectConversation('<%= conversation._id %>')">
                                <div class="flex items-center">
                                    <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center text-white font-bold mr-3">
                                        <%= conversation.otherUser.firstName.charAt(0).toUpperCase() %>
                                    </div>
                                    <div class="flex-1">
                                        <h4 class="font-semibold text-gray-800"><%= conversation.otherUser.firstName %> <%= conversation.otherUser.lastName %></h4>
                                        <p class="text-sm text-gray-600 truncate">
                                            <% if (conversation.lastMessage) { %>
                                                <%= conversation.lastMessage.content %>
                                            <% } else { %>
                                                Start a conversation
                                            <% } %>
                                        </p>
                                    </div>
                                    <div class="text-xs text-gray-500">
                                        <% if (conversation.lastMessage) { %>
                                            <%= new Date(conversation.lastMessage.createdAt).toLocaleDateString() %>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="p-8 text-center">
                            <div class="text-6xl mb-4">ðŸ’¬</div>
                            <h4 class="text-lg font-semibold text-gray-800 mb-2">No conversations yet</h4>
                            <p class="text-gray-600">Start messaging your friends!</p>
                        </div>
                    <% } %>
                </div>
            </div>
            
            <!-- Chat Area -->
            <div class="flex-1 flex flex-col">
                <% if (typeof selectedConversation !== 'undefined' && selectedConversation) { %>
                    <!-- Chat Header -->
                    <div class="p-4 border-b border-gray-200 flex items-center">
                        <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center text-white font-bold mr-3">
                            <%= selectedConversation.otherUser.firstName.charAt(0).toUpperCase() %>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-800"><%= selectedConversation.otherUser.firstName %> <%= selectedConversation.otherUser.lastName %></h3>
                            <p class="text-sm text-gray-500">Active now</p>
                        </div>
                    </div>
                    
                    <!-- Messages -->
                    <div class="flex-1 overflow-y-auto p-4 space-y-4" id="messages-container">
                        <% if (typeof messages !== 'undefined' && messages.length > 0) { %>
                            <% messages.forEach(message => { %>
                                <div class="flex <%= message.sender._id.toString() === user._id.toString() ? 'justify-end' : 'justify-start' %>">
                                    <div class="max-w-xs lg:max-w-md">
                                        <% if (message.sender._id.toString() !== user._id.toString()) { %>
                                            <div class="flex items-end space-x-2">
                                                <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center text-white text-sm font-bold">
                                                    <%= message.sender.firstName.charAt(0).toUpperCase() %>
                                                </div>
                                                <div class="bg-gray-200 rounded-lg px-4 py-2">
                                                    <p class="text-gray-800"><%= message.content %></p>
                                                    <p class="text-xs text-gray-500 mt-1"><%= new Date(message.createdAt).toLocaleTimeString() %></p>
                                                </div>
                                            </div>
                                        <% } else { %>
                                            <div class="bg-blue-600 text-white rounded-lg px-4 py-2">
                                                <p><%= message.content %></p>
                                                <p class="text-xs text-blue-200 mt-1"><%= new Date(message.createdAt).toLocaleTimeString() %></p>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="text-center py-8">
                                <div class="text-4xl mb-4">ðŸ‘‹</div>
                                <p class="text-gray-600">Say hello to start the conversation!</p>
                            </div>
                        <% } %>
                    </div>
                    
                    <!-- Message Input -->
                    <div class="p-4 border-t border-gray-200">
                        <form method="POST" action="/send-message" class="flex space-x-3">
                            <input type="hidden" name="recipientId" value="<%= selectedConversation.otherUser._id %>">
                            <input 
                                type="text" 
                                name="content" 
                                placeholder="Type a message..." 
                                required
                                class="flex-1 px-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:border-blue-500"
                            >
                            <button 
                                type="submit" 
                                class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-full transition"
                            >
                                Send
                            </button>
                        </form>
                    </div>
                <% } else { %>
                    <!-- No Conversation Selected -->
                    <div class="flex-1 flex items-center justify-center">
                        <div class="text-center">
                            <div class="text-8xl mb-6">ðŸ’¬</div>
                            <h3 class="text-2xl font-semibold text-gray-800 mb-2">Select a conversation</h3>
                            <p class="text-gray-600 mb-6">Choose from your existing conversations or start a new one</p>
                            <a href="/friends" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition">
                                Find Friends to Message
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <script>
        function selectConversation(conversationId) {
            window.location.href = `/messages?conversation=${conversationId}`;
        }
        
        // Auto-scroll to bottom of messages
        const messagesContainer = document.getElementById('messages-container');
        if (messagesContainer) {
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }
    </script>
</body>
</html>
