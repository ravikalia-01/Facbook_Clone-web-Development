<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Facebook Clone - Home">
    <meta name="keywords" content="Facebook, Clone, Social Media, Home">
    <title>Facebook Clone - Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
    <!-- Header -->
    <header class="bg-white shadow-md fixed top-0 w-full z-50">
        <div class="max-w-6xl mx-auto px-4 py-3 flex justify-between items-center">
            <a href="/dashboard" class="text-2xl font-bold text-blue-600">facebook</a>
            
            <nav class="hidden md:flex space-x-6">
                <a href="/dashboard" class="text-gray-700 hover:bg-gray-100 px-3 py-2 rounded-lg transition">Home</a>
                <a href="/friends" class="text-gray-700 hover:bg-gray-100 px-3 py-2 rounded-lg transition">Friends</a>
                <a href="/messages" class="text-gray-700 hover:bg-gray-100 px-3 py-2 rounded-lg transition">Messages</a>
                <a href="/profile" class="text-gray-700 hover:bg-gray-100 px-3 py-2 rounded-lg transition">Profile</a>
            </nav>
            
            <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold">
                    <%= user.firstName.charAt(0).toUpperCase() %>
                </div>
                <span class="hidden md:block text-gray-700"><%= user.firstName %> <%= user.lastName %></span>
                <a href="/logout" class="bg-gray-200 hover:bg-gray-300 px-3 py-2 rounded-lg text-gray-700 transition">Logout</a>
            </div>
        </div>
    </header>
    
    <!-- Main Content -->
    <div class="pt-20 max-w-6xl mx-auto px-4 grid grid-cols-1 md:grid-cols-4 gap-6">
        <!-- Left Sidebar -->
        <aside class="md:col-span-1 bg-white rounded-lg shadow-md p-4 h-fit">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Menu</h3>
            <div class="space-y-2">
                <a href="/profile" class="flex items-center p-3 hover:bg-gray-100 rounded-lg transition">
                    <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold mr-3">
                        <%= user.firstName.charAt(0).toUpperCase() %>
                    </div>
                    <span class="text-gray-700"><%= user.firstName %> <%= user.lastName %></span>
                </a>
                <a href="/friends" class="flex items-center p-3 hover:bg-gray-100 rounded-lg transition">
                    <span class="mr-3">üë•</span>
                    <span class="text-gray-700">Friends</span>
                </a>
                <a href="/messages" class="flex items-center p-3 hover:bg-gray-100 rounded-lg transition">
                    <span class="mr-3">üí¨</span>
                    <span class="text-gray-700">Messages</span>
                </a>
            </div>
        </aside>
        
        <!-- Main Feed -->
        <main class="md:col-span-2 space-y-6">
            <!-- Post Creator -->
            <div class="bg-white rounded-lg shadow-md p-4">
                <form method="POST" action="/create-post">
                    <textarea 
                        name="content" 
                        placeholder="What's on your mind, <%= user.firstName %>?"
                        class="w-full p-3 bg-gray-100 rounded-lg border-none resize-none focus:outline-none focus:ring-2 focus:ring-blue-500"
                        rows="3"
                    ></textarea>
                    <button 
                        type="submit" 
                        class="mt-3 bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-semibold transition"
                    >
                        Post
                    </button>
                </form>
            </div>
            
            <!-- Posts -->
            <% if (typeof posts !== 'undefined' && posts.length > 0) { %>
                <% posts.forEach(post => { %>
                    <div class="bg-white rounded-lg shadow-md p-4">
                        <div class="flex items-center mb-4">
                            <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold mr-3">
                                <%= post.author.firstName.charAt(0).toUpperCase() %>
                            </div>
                            <div class="flex-1">
                                <h4 class="font-semibold text-gray-800"><%= post.author.firstName %> <%= post.author.lastName %></h4>
                                <p class="text-sm text-gray-500"><%= new Date(post.createdAt).toLocaleDateString() %></p>
                            </div>
                            <% if (post.author._id.toString() === user._id.toString()) { %>
                                <form method="POST" action="/delete-post" class="ml-auto">
                                    <input type="hidden" name="postId" value="<%= post._id %>">
                                    <button type="submit" class="text-red-500 hover:text-red-700 text-sm font-medium px-2 py-1 rounded hover:bg-red-50 transition" onclick="return confirm('Are you sure you want to remove this post?')">
                                        Remove
                                    </button>
                                </form>
                            <% } %>
                        </div>
                        <div class="text-gray-700 mb-4">
                            <%= post.content %>
                        </div>
                        <div class="flex space-x-4 pt-3 border-t border-gray-200">
                            <button class="flex items-center space-x-2 text-gray-600 hover:bg-gray-100 px-3 py-2 rounded-lg transition">
                                <span>üëç</span>
                                <span>Like</span>
                            </button>
                            <button class="flex items-center space-x-2 text-gray-600 hover:bg-gray-100 px-3 py-2 rounded-lg transition">
                                <span>üí¨</span>
                                <span>Comment</span>
                            </button>
                            <button class="flex items-center space-x-2 text-gray-600 hover:bg-gray-100 px-3 py-2 rounded-lg transition">
                                <span>üì§</span>
                                <span>Share</span>
                            </button>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="bg-white rounded-lg shadow-md p-6 text-center">
                    <h3 class="text-lg font-semibold text-gray-800 mb-2">Welcome to Facebook Clone!</h3>
                    <p class="text-gray-600">Start by adding some friends and creating your first post.</p>
                </div>
            <% } %>
        </main>
        
        <!-- Right Sidebar -->
        <aside class="md:col-span-1 bg-white rounded-lg shadow-md p-4 h-fit">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Friends</h3>
            <% if (typeof friends !== 'undefined' && friends.length > 0) { %>
                <div class="space-y-2">
                    <% friends.forEach(friend => { %>
                        <div class="flex items-center p-2 hover:bg-gray-100 rounded-lg cursor-pointer transition">
                            <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center text-white font-bold mr-3">
                                <%= friend.firstName.charAt(0).toUpperCase() %>
                            </div>
                            <span class="text-gray-700"><%= friend.firstName %> <%= friend.lastName %></span>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p class="text-gray-500 text-center">No friends yet</p>
            <% } %>
        </aside>
    </div>
</body>
</html>
